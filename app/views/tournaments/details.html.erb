<h1><%= @tournament.full_name %></h1>
<table>
  <tr>
    <td>Статус мероприятия</td>
    <td><%= @tournament.status.name %></td>
  </tr>
  <tr>
    <td>Тип соревнований</td>
    <td><%= @tournament.tournament_type.name %></td>
  </tr>
  <tr>
    <td>Дата начала</td>
    <td><%= @tournament.start_date %></td>
  </tr>
  <tr>
    <td>Дата окончания</td>
    <td><%= @tournament.end_date %></td>
  </tr>
  <tr>
    <td>Место проведения</td>
    <td><%= @tournament.place %></td>
  </tr>
  <tr>
    <td>Количество участников</td>
    <td><%= @persons_count %></td>
  </tr>
</table>
<h4><%= link_to 'Редактировать', 'edit/'+@tournament.id.to_s %></h4>
<h4><%= link_to 'Список участников', '/person/page?num=1&per_page=10&tournament_id='+@tournament.id.to_s %></h4>
<% if @tournament.tournament_pools.count==0 %>
    <h4><%= link_to 'Генерировать пулы', '/tournament-pool/generate?tournament_id='+@tournament.id.to_s  %></h4>
<% else %>
    <h4><%= link_to 'Список пулов', '/tournament-pool/'+@tournament.id.to_s+'/list' %></h4>
<% end %>
<% if !@has_grid %>
    <h4><%= link_to 'Генерировать турнирную сетку', '/rest/fight/generate-grid?tournament_id='+@tournament.id.to_s, method: 'post'  %></h4>
<% else %>
    <h4><%= link_to 'Турнирная сетка', '/fight/grid?tournament_id='+@tournament.id.to_s %></h4>
<% end %>
